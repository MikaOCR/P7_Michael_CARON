generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id            Int      @id @default(autoincrement())
  title         String   @db.VarChar(255)
  content       String?
  selectedFile  String?
  author        User     @relation(fields: [authorId], references: [id], onDelete: SetDefault, onUpdate: SetDefault)
  authorId      Int
  createdAt     DateTime @default(now())
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id], onDelete: SetDefault, onUpdate: SetDefault)
  userId Int     @unique
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  posts     Post[]
  profile   Profile?
}

enum Role {
  USER
  ADMIN
}
